---
// src/components/PortfolioGrid.astro
interface PortfolioItem {
    title: string;
    slug: string;
    image: string;
}

interface Props {
    items: PortfolioItem[];
}

const { items } = Astro.props;
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    {
        items.map((item) => (
            <a href={`/portfolio/${item.slug}`} class="group block overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-shadow">
                <div class="relative aspect-video overflow-hidden">
                    <img
                        src={item.image}
                        alt={item.title}
                        class="object-cover w-full h-full transform group-hover:scale-105 transition-transform duration-200"
                    />
                </div>
                <div class="p-4">
                    <h3 class="text-lg font-semibold text-gray-900 group-hover:text-blue-600 transition-colors">{item.title}</h3>
                </div>
            </a>
        ))
    }
</div>
